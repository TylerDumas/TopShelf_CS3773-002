<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:system="clr-namespace:System;assembly=netstandard" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TopShelfCustomer.Views.HomePage" xmlns:vm="clr-namespace:TopShelfCustomer.ViewModels" Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:HomeViewModel/>
    </ContentPage.BindingContext>

    <!-- Content -->
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource AccentLight}">
            <!-- RowDefinitions -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>
            <!-- Profile Info Header -->
            <ContentView BackgroundColor="{StaticResource Accent}" Grid.Row="0" Padding="0, 80, 0, 30" >
                <!-- Name and Portrait -->
                <StackLayout Orientation="Vertical" Margin="20, 0, 20, 0">

                    <!-- Profile Picture -->
                    <Frame HorizontalOptions="Center" CornerRadius="42" WidthRequest="48" HeightRequest="48" HasShadow="True" BorderColor="{StaticResource Primary}">
                        <Image Source="portrait.png" />
                    </Frame>

                    <!-- Welcome Message-->
                    <Label Text="{Binding UserRealName}" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" FontSize="30" TextColor="White"/>

                    <!-- User Store -->
                    <Label HorizontalOptions="CenterAndExpand" VerticalOptions="Center" TextColor="White" Margin="0, 20, 0, 0" >
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span Text="Your Store: " FontAttributes="Bold" FontSize="Large" />
                                    <Span Text="{Binding UserStoreName}" FontSize="Large" />
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>
            </ContentView>

            <!-- Coupons List -->
            <ScrollView Grid.Row="1">
                <StackLayout>
                    <!-- Test Coupon One -->
                    <ContentView VerticalOptions="Start" HorizontalOptions="FillAndExpand" HeightRequest="220">
                        <Frame BorderColor="{StaticResource Primary}" BackgroundColor="White">
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <FormattedString.Spans>
                                            <Span Text="Coupon One " FontAttributes="Bold" FontSize="Large"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Store: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="HEB 111 South Boogie Street" FontSize="Body" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Description: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="You get a free bucket of armadillos. You're guaranteed to get leprose or your money back!" FontSize="Body"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Directions" FontAttributes="Bold" TextDecorations="Underline" FontSize="18" />
                                        </FormattedString.Spans>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>
                    </ContentView>
                    <ContentView VerticalOptions="Start" HorizontalOptions="FillAndExpand" HeightRequest="220">
                        <Frame BorderColor="{StaticResource Primary}" BackgroundColor="White">
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <FormattedString.Spans>
                                            <Span Text="Coupon Two " FontAttributes="Bold" FontSize="Large"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Store: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="HEB 222 South Boogie Street" FontSize="Body" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Description: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="Enjoy some of our HEB Primo Pick, Prime 1 Baby Meat. Always fresh, never frozen! $0.50 off per pound." FontSize="Body"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Directions" FontAttributes="Bold" TextDecorations="Underline" FontSize="18" />
                                        </FormattedString.Spans>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>
                    </ContentView>
                    <ContentView VerticalOptions="Start" HorizontalOptions="FillAndExpand" HeightRequest="220">
                        <Frame BorderColor="{StaticResource Primary}" BackgroundColor="White">
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <FormattedString.Spans>
                                            <Span Text="Coupon Three " FontAttributes="Bold" FontSize="Large"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Store: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="HEB 333 South Boogie Street" FontSize="Body" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Description: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="Get a free HEB provolone cheese value pack with your purchase of a human slave!" FontSize="Body"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Directions" FontAttributes="Bold" TextDecorations="Underline" FontSize="18" />
                                        </FormattedString.Spans>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>
                    </ContentView>
                    <ContentView VerticalOptions="Start" HorizontalOptions="FillAndExpand" HeightRequest="220">
                        <Frame BorderColor="{StaticResource Primary}" BackgroundColor="White">
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <FormattedString.Spans>
                                            <Span Text="Coupon Four " FontAttributes="Bold" FontSize="Large"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Store: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="HEB 444 South Boogie Street" FontSize="Body" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Description: " FontAttributes="Bold" FontSize="18" />
                                            <Span Text="Live primates for sale! Visit the outdoor section of your local HEB and pick out an ape today!" FontSize="Body"/>
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="{x:Static system:Environment.NewLine}" />
                                            <Span Text="Directions" FontAttributes="Bold" TextDecorations="Underline" FontSize="18" />
                                        </FormattedString.Spans>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>
                    </ContentView>
                </StackLayout>
            </ScrollView>

            <!-- Settings and Account Buttons -->
            <StackLayout Orientation="Horizontal" Padding="10,10,10,10" Spacing="10" BackgroundColor="{StaticResource Accent}" Grid.Row="2">
                <Button Command="{Binding OpenCreateOrderView}" Text="New Order" BackgroundColor="{StaticResource Primary}"
                        WidthRequest="80" HorizontalOptions="FillAndExpand" TextColor="White"
                        FontAttributes="Bold" FontSize="14" />
                <Button Text="Order History" BackgroundColor="{StaticResource Primary}"
                        WidthRequest="80" HorizontalOptions="FillAndExpand" TextColor="White"
                        FontAttributes="Bold" FontSize="14" />
                <Button Text="Settings" Command="{Binding OpenSettingsView}" BackgroundColor="{StaticResource Primary}"
                        WidthRequest="80" HorizontalOptions="FillAndExpand" TextColor="White"
                        FontAttributes="Bold" FontSize="14" />
            </StackLayout>   
        </Grid>
    </ContentPage.Content>
</ContentPage>
